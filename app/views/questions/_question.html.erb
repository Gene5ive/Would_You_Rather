<li>
  <p><%= question.title %></p>
  <p><%= link_to 'Edit', edit_question_path(question) %> |
     <%= link_to 'Delete', question_path(question),
     :data => {:confirm => "Are you sure?",
               :method  => "delete"} %> </p>
  <p>
    <%= link_to question.option_one, questions_path, id: "option_one", class: "btn btn-default", remote: true %>
    <strong>OR</strong>
    <%= link_to question.option_two, question_path(question), id: "option_two", class: "btn btn-default", remote: true %>
  </p>
  <p>
    Votes: <span id="option_one_votes"><%= question.option_one_votes %></span> |
    Votes: <span id="option_two_votes"><%= question.option_two_votes %></span>
  </p>
</li>
